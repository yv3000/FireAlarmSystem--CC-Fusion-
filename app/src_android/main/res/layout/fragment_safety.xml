<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/safety_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".SafetyFragment">

    <TextView
        android:id="@+id/safety_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="My Status"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/safety_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Mark yourself SAFE after evacuating."
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/safety_title" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_my_status"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#FFEBEE"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/safety_instructions">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_status"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_delete"
                app:tint="#D32F2F" />

            <TextView
                android:id="@+id/text_my_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="NOT SAFE"
                android:textColor="#D32F2F"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/label_headcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Building Headcount (Live)"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_my_status"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/label_headcount"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:stretchColumns="1">

            <TableRow android:paddingBottom="8dp">
                <TextView android:text="#" android:textStyle="bold" android:paddingEnd="8dp"/>
                <TextView android:text="Name" android:textStyle="bold" />
                <TextView android:text="Floor" android:textStyle="bold" android:paddingEnd="16dp"/>
                <TextView android:text="Status" android:textStyle="bold" />
            </TableRow>
            <View android:layout_height="1dp" android:background="#CCCCCC" android:layout_marginBottom="8dp"/>

            <TableRow android:paddingBottom="8dp">
                <TextView android:text="1" />
                <TextView android:text="Amit Sharma" />
                <TextView android:text="1" />
                <TextView android:text="SAFE" android:textColor="#2E7D32" android:textStyle="bold"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView android:text="2" />
                <TextView android:text="Priya Patel" />
                <TextView android:text="2" />
                <TextView android:text="NOT SAFE" android:textColor="#C62828" android:textStyle="bold"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView android:text="3" />
                <TextView android:text="Rahul Verma" />
                <TextView android:text="1" />
                <TextView android:text="SAFE" android:textColor="#2E7D32" android:textStyle="bold"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView android:text="4" />
                <TextView android:text="Sneha Gupta" />
                <TextView android:text="3" />
                <TextView android:text="NOT SAFE" android:textColor="#C62828" android:textStyle="bold"/>
            </TableRow>

            <TableRow android:paddingBottom="8dp">
                <TextView android:text="5" />
                <TextView android:text="Vikram Singh" />
                <TextView android:text="2" />
                <TextView android:text="SAFE" android:textColor="#2E7D32" android:textStyle="bold"/>
            </TableRow>

            <View android:layout_height="1dp" android:background="#CCCCCC" android:layout_marginBottom="8dp"/>

            <TableRow>
                <TextView android:text="6" />
                <TextView android:id="@+id/table_user_name" android:text="Me" android:textStyle="italic"/>
                <TextView android:id="@+id/table_user_floor" android:text="-" />
                <TextView android:id="@+id/table_user_status" android:text="NOT SAFE" android:textColor="#C62828" android:textStyle="bold"/>
            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_safety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="I am Safe"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>